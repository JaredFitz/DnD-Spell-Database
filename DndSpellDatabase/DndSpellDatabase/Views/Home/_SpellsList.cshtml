<table class="table table-striped table-bordered table-condensed">
    <thead>
        <tr>
            <th>Name</th>
            <th>Range</th>
            <th>DamageEffect</th>
            <th>Level</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody data-bind="foreach: spells">
        <tr>
            <td data-bind="text: Name"></td>
            <td data-bind="text: Range"></td>
            <td data-bind="text: DamageEffect"></td>
            <td data-bind="text: Level"></td>
            <td data-bind="text: Description"></td>
            <td><input type="button" class="btn btn-danger btn-xs" value=" [x] delete " data-bind="click: $parent.removeSpell" /></td>
        </tr>
    </tbody>
</table>

<br />

<input type="button" class="btn btn-default" id="btnGetSpells" value="Refresh" data-bind="click: getSpells" /> 